LIB_KEESE=~/.keese

source_if_exists() {
# First argument is file to try to source, remaining arguments are passed in
    if [ -f "$1" ]; then
        source $1 ${*:2}
    fi
}

#echo "Loading Keese Tools"
source_if_exists $LIB_KEESE/dgpg/dgpg.sh
source_if_exists $LIB_KEESE/synckeys/synckeys.sh
source_if_exists $LIB_KEESE/phrase_generator/phrase_generator.sh
