# Sets the ROS_MASTER_URI variable approprately
# Example 'ros-master set atrv.lan'
ros-master () {
    if [ $# -eq 0 ] ; then
        echo $ROS_MASTER_URI
    elif [ $1 = "set" ] && [ $# -eq 2 ] ; then
        export ROS_MASTER_URI=http://$2:11311
    else
        echo "USAGE:"
        echo "ros-master                    displays the ROS_MASTER_URI"
        echo "ros-master set <address>      sets the rosmaster address"
    fi
}

# Select between Fuerte and Groovy
ros-version () {
    if [ $1 = "fuerte" ]; then
        source /opt/ros/fuerte/setup.bash 
        export ROS_PACKAGE_PATH=~/Source/haptics/ros:~/Source/atrvjr_simulator:~/Source/cvproject/ros/:~/tmp/009_jrodom:~/Source/pr2cal/pr2_calibration:~/Source/checkers/roscheckers:$ROS_PACKAGE_PATH
    elif [ $1 = "hydro" ]; then
        source /opt/ros/hydro/setup.bash
        export ROS_PACKAGE_PATH=~/Source/haptics/ros:~/Source/atrvjr_simulator:~/Source/cvproject/ros/:~/tmp/009_jrodom:~/Source/checkers/roscheckers:$ROS_PACKAGE_PATH
    fi
}
ros-version hydro

