USRLOCID=${GREEN}
TIMESTMP=${BROWN}
PATHLINE=${LIGHTBLUE}

# Sets the ROS_MASTER_URI variable approprately
# Example 'ros-master set atrv.lan'
ros-master () {
    if [ $# -eq 0 ] ; then
        echo $ROS_MASTER_URI
    elif [ $1 = "set" ] && [ $# -eq 2 ] ; then
        export ROS_MASTER_URI=http://$2:11311
    else
        echo "USAGE:"
        echo "ros-master                    displays the ROS_MASTER_URI"
        echo "ros-master set <address>      sets the rosmaster address"
    fi
}

if [ $1 = "hydro" ]; then
    echo "Using Ros Hydro"
    source /opt/ros/hydro/setup.bash
elif [ $1 = "indigo" ]; then
    echo "Using Ros Indigo"
    source /home/dan/ros_catkin_ws/install_isolated/setup.bash
else
    echo "Ros Distro not initialized"
fi

export GPG_TTY='tty'

echo "Welcome to Replicant!"
